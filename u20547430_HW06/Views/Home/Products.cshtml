@model IEnumerable<u20547430_HW06.Models.product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Enter Product Name" aria-label="Search" name="searchString" autocomplete="off">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        <a href="/Book/Index" class="btn btn-success w-100">Create</a>
    </form>
</div>

<br>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="table-body">
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(() => {
            GetProducts();


            function GetProducts() {
                $.get({
                    url: "@Url.Action("GetProducts", "Home")",
                    success: (data) => {
                    let productData = JSON.parse(data);

                    console.log(productData);
                }
                });
            }
        })
    </script>
}

